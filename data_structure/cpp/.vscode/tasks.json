{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "C:/software/MinGW/bin/g++.exe",
			"args": [
				"-g",
				"-fexec-charset=GBK",   // 处理mingw中文编码问题
				"-finput-charset=UTF-8",// 处理mingw中文编码问题
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "C:/software/MinGW/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: C:/software/MinGW/bin/g++.exe"
		}
	]
}